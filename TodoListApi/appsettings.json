{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs/ApiLogs.txt", "rollingInterval": "Day" }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "TodoAPI"
    }
  },
  "Jwt":{
    "Key": "c743264501f3967b61f7bb3a50acf296"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;user=root;password=root;database=todo-api;"
  }
}
