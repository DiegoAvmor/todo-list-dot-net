{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs/ApiLogs.txt", "rollingInterval": "Day" }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "TodoAPI"
    }
  },
  "ApplicationConfig": {
    "DbConfig": {
      "Server":"localhost",
      "Port": "3306",
      "User":"root",
      "Password":"root",
      "Database":"todo-api"
    },
    "JwtConfig": {
      "Key":"c743264501f3967b61f7bb3a50acf296",
      "Scheme": "Bearer",
      "ExpiresIn" : 3
    }
  },
  "AllowedHosts": "*"
}
